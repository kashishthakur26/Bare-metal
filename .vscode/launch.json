    },

    {
      "name": "ST-Link: Attach to Application",
      "type": "cortex-debug",
      "request": "attach",
      "cwd": "${workspaceFolder}/app",
      "executable": "${workspaceFolder}/app/firmware.elf",
      "servertype": "stutil",
      "device": "STM32F401RE",
      "interface": "swd",
